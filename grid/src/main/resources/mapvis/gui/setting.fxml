<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mapvis.gui.SettingController">
    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="239.0" minWidth="57.0" prefWidth="57.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="543.0" minWidth="361.0" prefWidth="543.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Span:" />
                <TextField fx:id="spanField" text="10" GridPane.columnIndex="1" />
                <Label text="Depth:" GridPane.rowIndex="1" />
                <TextField fx:id="weightField" text="100" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="depthField" text="3" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Weight:" GridPane.rowIndex="2" />
                <Label text="Seed:" GridPane.rowIndex="3" />
                <TextField fx:id="seedField" text="1" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <FlowPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
               <children>
                  <RadioButton mnemonicParsing="false" onAction="#onChooseRandomColor" selected="true" text="Random">
                     <toggleGroup>
                        <ToggleGroup fx:id="ColorMethod" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" onAction="#onChooseLevel1" text="Level 1" toggleGroup="$ColorMethod" />
                  <RadioButton mnemonicParsing="false" onAction="#onChooseLevel2" text="Level 2" toggleGroup="$ColorMethod" />
                  <RadioButton mnemonicParsing="false" onAction="#onChooseLevel3" text="Level 3" toggleGroup="$ColorMethod" />
                  <RadioButton mnemonicParsing="false" onAction="#onChooseLevel4" text="Level 4" toggleGroup="$ColorMethod" />
               </children>
            </FlowPane>
            <Label text="Color:" GridPane.rowIndex="4" />
            </children>
        </GridPane>
        <HBox>
            <children>
                <Button mnemonicParsing="false" onAction="#generateTree" text="Generate tree" />
                <Button mnemonicParsing="false" onAction="#begin" text="Begin" />
            </children>
        </HBox>
        <TextArea fx:id="infoArea" editable="false" />
    </children>
</VBox>
